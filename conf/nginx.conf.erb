daemon off;
worker_processes 4;

events {
  use epoll;
  worker_connections 1024;
}

http {
  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;

  gzip_static on;

  include mime.types;

 <% if ENV["MKDOCS_SITEURL"] %>
  server {
    listen <%= ENV["PORT"] %>;
    rewrite ^(.*) <%= ENV["MKDOCS_SITEURL"] %>$1 permanent;
  }
 <% end %>

  server {
    listen <%= ENV["PORT"] %>;
    port_in_redirect off;
    root /app/public;
  <% if ENV["MKDOCS_SITEURL"] %>
    server_name <%= require 'uri'; URI.parse(ENV["MKDOCS_SITEURL"]).host %>;
  <% end %>

  # for pre-open closed test
  map $http_x_forwarded_for $allowed {
      default deny;
      ~\s*::1$ allow;
      ~\s*127.0.0.1$ allow;
      ~\s*localhost$ allow;
      ~\s*::ffff:127.0.0.1$   allow;
  }

  <% if ENV["LABS_IP"] %>
    if ($http_x_forwarded_for ~ "<%= ENV["LABS_IP"]) %>") {
     set $allow true;
    }
  <% end %>
   
  location / {
      
      alias /path/to/document_root
  }

    location / {
      if ( $allowed = 'deny' ) { return 403; }
      expires 10s;
    }
  }
}
